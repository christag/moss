# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/moss

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
# NOTE: NODE_ENV is managed automatically by Next.js - DO NOT set it manually

# Testing/Development Configuration
# Set to 'true' to bypass setup wizard for testing/development
SKIP_SETUP_WIZARD=false

# Authentication
# IMPORTANT: Set NEXTAUTH_URL to your site's full FQDN (including protocol)
# This ensures proper redirects for login/logout when accessing via domain name
# Examples:
#   Development: http://localhost:3000
#   Production: https://moss.example.com
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here-generate-with-openssl-rand-base64-32

# ============================================================================
# Encryption for Integration Credentials
# ============================================================================
# CRITICAL: Generate a unique key for each environment (dev/staging/prod)
# Generate using: openssl rand -base64 32
# NEVER commit the actual key to git - only store in .env.local (gitignored)
ENCRYPTION_KEY=generate-with-openssl-rand-base64-32

# ============================================================================
# Development Integration Credentials (Optional)
# ============================================================================
# These are ONLY for YOUR local testing with YOUR production Okta/Jamf instances
# Use read-only API tokens where possible
# NEVER commit these values - store actual credentials in .env.local (gitignored)

# Okta Development Testing
# Create a read-only API token at: Admin > Security > API > Tokens
# Documentation: https://developer.okta.com/docs/guides/create-an-api-token/
OKTA_DEV_DOMAIN=yourcompany.okta.com
OKTA_DEV_API_TOKEN=create-read-only-token-in-okta-admin

# Jamf Development Testing
# Create OAuth client at: Settings > System > API Roles and Clients
# Use "Read" permissions for Computer, User, Smart Computer Group
JAMF_DEV_URL=yourcompany.jamfcloud.com
JAMF_DEV_CLIENT_ID=create-oauth-client-in-jamf
JAMF_DEV_CLIENT_SECRET=oauth-client-secret-from-jamf

# Development Safety: Limit sync scope to test groups only
# Okta: Group ID or filter expression (e.g., "MOSS Integration Test Users")
OKTA_DEV_TEST_GROUP_ID=00g1example2group3id
# Jamf: Smart group ID containing only test devices
JAMF_DEV_TEST_SMART_GROUP_ID=123
